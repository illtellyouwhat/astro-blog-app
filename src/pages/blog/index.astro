---
import BaseLayout from "~/layouts/BaseLayout.astro";
import ThemePostListItem from "~/components/ThemePostListItem.astro";
import { getCollection } from "astro:content";
import { toThemePosts } from "~/utils/themeAdapter";
import { site } from "@/consts";
import { site } from "@/consts";

const pageTitle = "Automation Architech Blog";
const pageDescription = "Playbooks and engineering notes on automation, observability, and resilient delivery.";

const rawPosts = (await getCollection("posts", ({ data }) => !data.draft)).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

const posts = toThemePosts(rawPosts);
const tagSet = new Set<string>();
rawPosts.forEach((post) => post.data.tags?.forEach((tag) => tagSet.add(tag)));
const tags = Array.from(tagSet).sort((a, b) => a.localeCompare(b));

const listingJsonLd = {
  "@context": "https://schema.org",
  "@type": "Blog",
  name: pageTitle,
  description: pageDescription,
  url: `${site.url}/blog/`,
  blogPost: posts.slice(0, 10).map((post) => ({
    "@type": "BlogPosting",
    url: `${site.url}/blog/${post.slug}/`,
    headline: post.title,
    datePublished: post.date.toISOString()
  }))
};

const breadcrumbJsonLd = {
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  itemListElement: [
    {
      "@type": "ListItem",
      position: 1,
      name: "Home",
      item: site.url
    },
    {
      "@type": "ListItem",
      position: 2,
      name: "Blog",
      item: `${site.url}/blog/`
    }
  ]
};
---
<BaseLayout title={pageTitle} description={pageDescription} jsonLd={[listingJsonLd, breadcrumbJsonLd]}>
  <section class="space-y-6">
    <div class="space-y-3">
      <h1 class="text-3xl font-bold tracking-tight text-skin-base">{pageTitle}</h1>
      <p class="text-lg text-skin-dodge">{pageDescription}</p>
    </div>
    <ul class="space-y-6">
      {posts.map((post) => (
        <ThemePostListItem post={post} />
      ))}
    </ul>
  </section>

  <div slot="aside" class="space-y-6">
    <div class="rounded-xl border border-skin-base/20 bg-skin-card p-5 shadow-card">
      <h2 class="text-sm font-semibold uppercase tracking-wide text-skin-dodge">Latest</h2>
      <ul class="mt-3 space-y-2 text-sm">
        {posts.slice(0, 5).map((post) => {
          const href = `${site.baseUrl}/blog/${post.slug}/`.replace(/\/\/+/g, "/");
          return (
          <li>
            <a class="hover:text-skin-active" href={href}>
              {post.title}
            </a>
          </li>
        );
        })}
      </ul>
    </div>
    {tags.length > 0 && (
      <div class="rounded-xl border border-skin-base/20 bg-skin-card p-5 shadow-card">
        <h2 class="text-sm font-semibold uppercase tracking-wide text-skin-dodge">Topics</h2>
        <div class="mt-3 flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="rounded-full border border-skin-base/40 bg-skin-fill px-3 py-1 text-xs font-medium text-skin-dodge">
              {tag}
            </span>
          ))}
        </div>
      </div>
    )}
  </div>
</BaseLayout>
