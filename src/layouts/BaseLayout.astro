---
export interface Props {
  title?: string;
  description?: string;
}

const {
  title = "Automation Architech Blog",
  description = "Insights on automation, architecture, and operations from Automation Architech."
} = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>
